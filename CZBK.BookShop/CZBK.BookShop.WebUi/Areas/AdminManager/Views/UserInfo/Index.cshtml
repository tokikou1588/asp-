@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        $(function () {
            loadData();
            $("#addDiv").css("display", "none");
            $("#editDiv").css("display", "none");
            $("#setUserRoleDiv").css("display", "none");
            
            $("#btnSearch").click(function () {//搜索
                //获取搜索的条件
                var searchParams = {
                    name: $("#txtName").val(),
                    mail:$("#txtMail").val()
                };
                loadData(searchParams);
            });
        });
        function loadData(params) {
            $('#tt').datagrid({
                url: '/AdminManager/UserInfo/GetUserInfo',
                title: '用户数据表格',
                width: 700,
                height: 400,
                fitColumns: true, //列自适应
                nowrap: false,
                idField: 'ID',//主键列的列明
                loadMsg: '正在加载用户的信息...',
                pagination: true,//是否有分页
                singleSelect: false,//是否单行选择
                pageSize: 5,//页大小，一页多少条数据
                pageNumber: 1,//当前页，默认的
                pageList: [5, 10, 15],
                queryParams: params,//往后台传递参数
                columns: [[//c.UserName, c.UserPass, c.Email, c.RegTime
                    { field: 'ck', checkbox: true, align: 'left', width: 50 },
					{ field: 'ID', title: '编号', width: 80 },
					{ field: 'UserName', title: '姓名', width: 120 },
                     { field: 'UserPass', title: '密码', width: 120 },
                      { field: 'Email', title: '邮箱', width: 120 },
					{
					    field: 'RegTime', title: '时间', width: 80, align: 'right',
					    formatter: function (value, row, index) {
					        return (eval(value.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-M-d");
					    }
					}
                ]],
                toolbar: [{
                    id: 'btnDelete',
                    text: '删除',
                    iconCls: 'icon-remove',
                    handler: function () {
                        deleteInfo();
                    }
                }, {
                    id: 'btnAdd',
                    text: '添加',
                    iconCls: 'icon-add',
                    handler: function () {
                        addInfo();
                    }
                }, {
                    id: 'btnEdit',
                    text: '编辑',
                    iconCls: 'icon-edit',
                    handler: function () {
                        editInfo();
                    }
               
                }, {
                    id: 'btnSetUserRole',
                    text: '为用户分配角色',
                    iconCls: 'icon-edit',
                    handler: function () {
                        setUserRoleInfo();
                    }
                }
                ],
            });
        }
        //为用户分配角色
        function setUserRoleInfo() {
            var rows = $('#tt').datagrid('getSelections');
            if (!rows || rows.length != 1) {
                //alert("请选择要修改的商品！");
                $.messager.alert("提醒", "只能选择1个用户!", "error");
                return;
            }
            $("#setUserRoleDiv").css("display", "block");
            $("#setUserRoleFrame").attr("src", "/AdminManager/UserInfo/SetUserRoleInfo/?userId=" + rows[0].ID);
            $('#setUserRoleDiv').dialog({
                title: "编辑信息",
                width: 300,
                height: 400,
                collapsible: true,
                resizable: true,
                modal: true,
                buttons: [{
                    text: '确定',
                    iconCls: 'icon-ok',
                    handler: function () {
                        //完成表单的校验.
                        //$("#editForm").submit();//提交表单
                      var childWindow = $("#setUserRoleFrame")[0].contentWindow;//获取子窗体的window对象.
                      childWindow.subForm();
                    }
                }, {
                    text: '取消',
                    handler: function () {
                        $('#setUserRoleDiv').dialog('close');
                    }
                }]
            });
        }
        function afterSetRole() {
            $('#setUserRoleDiv').dialog('close');
        }


        //编辑信息
        function editInfo() {
            var rows = $('#tt').datagrid('getSelections');
            if (!rows || rows.length!=1) {
                //alert("请选择要修改的商品！");
                $.messager.alert("提醒", "你回修改吗!", "error");
                return;
            }
            $("#editDiv").css("display", "block");
            //$("#txtUserName").val(rows[0].UserName);
            //$("#txtUserPass").val(rows[0].UserPass);
            //$("#txtEmail").val(rows[0].Email);
            //$("#txtRegTime").val(ChangeDateFormat(rows[0].RegTime));
            //$("#txtId").val(rows[0].ID);
            $("#editFrame").attr("src", "/AdminManager/UserInfo/ShowEditInfo/?id=" + rows[0].ID)
            $('#editDiv').dialog({
                title: "编辑信息",
                width: 300,
                height: 400,
                collapsible: true,
                resizable: true,
                modal: true,
                buttons: [{
                    text: '确定',
                    iconCls: 'icon-ok',
                    handler: function () {
                        //完成表单的校验.
                        //$("#editForm").submit();//提交表单
                        var childWindow = $("#editFrame")[0].contentWindow;//获取子窗体的window对象.
                        childWindow.subEditForm();
                    }
                }, {
                    text: '取消',
                    handler: function () {
                        $('#editDiv').dialog('close');
                    }
                }]
            });
        }

        //修改完成以后调用该方法
        function afterEdit(data) {
            if (data == "ok") {
                $('#editDiv').dialog('close');
                $('#tt').datagrid('reload');//加载数据显示当前页面
            }
        }

        //添加数据
        function addInfo() {
            $("#addDiv").css("display", "block");
            $('#addDiv').dialog({
                title:"添加信息",
                width: 300,
                height: 200,
                collapsible: true,
                resizable: true,
                modal:true,
                buttons: [{
                    text: '确定',
                    iconCls: 'icon-ok',
                    handler: function () {
                        //完成表单的校验.
                        $("#addForm").submit();//提交表单
                    }
                }, {
                    text: '取消',
                    handler: function () {
                        $('#addDiv').dialog('close');
                    }
                }]
            });

        }
        //添加完成以后调用该方法
        function afterAdd(data) {
            if (data == "ok") {
                $('#addDiv').dialog('close');
                $('#tt').datagrid('reload');//加载数据显示当前页面
                $("#addForm input").val("");
            }
        }

        //删除数据
        function deleteInfo() {
            var rows = $('#tt').datagrid('getSelections');
            if (!rows || rows.length == 0) {
                //alert("请选择要修改的商品！");
                $.messager.alert("提醒", "请选择要删除的记录!", "error");
                return;
            }
            if ($.messager.confirm("提示", "确定要删除吗?", function (r) {
                if (r) {
                   var strId = "";
            for (var i = 0; i < rows.length; i++) {
                strId = strId + rows[i].ID + ",";//6,4,
            }
            strId = strId.substr(0, strId.length - 1);//6,4
            $.post("/AdminManager/UserInfo/DeleteUserInfo", { "strId": strId }, function (data) {
                if (data == "ok") {
                //重新加载.
                //loadData();
                    $('#tt').datagrid('clearSelections');//取消选择项.
                    $('#tt').datagrid('reload');//加载数据显示当前页面
            } else {
                    $.messager.alert("提醒", "删除失败!", "error");
                    return;
            }
            })
            }
            }));
        }
        function ChangeDateFormat(cellval) {
            var date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
            var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
            var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
            return date.getFullYear() + "-" + month + "-" + currentDate;
        }

    </script>
</head>
<body>
    <div>
        用户名:<input type="text" id="txtName" />&nbsp;&nbsp;邮箱:<input type="text" id="txtMail" /><input type="button" id="btnSearch" value="搜索"
/>        <table id="tt" style="width: 700px;" title="标题，可以使用代码进行初始化，也可以使用这种属性的方式" iconcls="icon-edit">
        </table>
    </div>
    <!----------------------------添加用户信息---------------------------------------->
    <div id="addDiv">
        @using(Ajax.BeginForm("AddUserInfo",new{},new AjaxOptions(){HttpMethod="post", OnSuccess="afterAdd"},new{id="addForm"})){
        <table>
            <tr>
                <td>用户名:</td><td><input type="text" name="UserName" /></td>
            </tr>
            <tr>
                <td>密码:</td><td><input type="text" name="UserPass" /></td>
            </tr>
            <tr>
                <td>邮箱:</td><td><input type="text" name="Email" /></td>
            </tr>
        </table>
        }
    </div>
      <!----------------------------添加用户信息结束---------------------------------------->

     <!----------------------------编辑用户信息---------------------------------------->
    <div id="editDiv">
         @* @using(Ajax.BeginForm("EditUserInfo",new{},new AjaxOptions(){HttpMethod="post", OnSuccess="afterEdit"},new{id="editForm"})){
              <input type="hidden" name="ID" id="txtId" />
        <table>
            <tr>
                <td>用户名:</td><td><input type="text" name="UserName" id="txtUserName" /></td>
            </tr>
            <tr>
                <td>密码:</td><td><input type="text" name="UserPass" id="txtUserPass" /></td>
            </tr>
            <tr>
                <td>邮箱:</td><td><input type="text" name="Email" id="txtEmail"/></td>
            </tr>
            <tr>
                <td>日期</td><td><input type="text" name="RegTime" id="txtRegTime" /></td>
            </tr>
        </table>
        }*@
        <iframe frameborder="0" scrolling="no" width="100%" height="100%" id="editFrame"></iframe>

    </div>
    <!----------------------------编辑用户信息结束---------------------------------------->

     <!----------------------------给用户分配角色---------------------------------------->
    <div id="setUserRoleDiv">
        <iframe frameborder="0" scrolling="no" width="100%" height="100%"  id="setUserRoleFrame"></iframe>

    </div>

</body>
</html>
