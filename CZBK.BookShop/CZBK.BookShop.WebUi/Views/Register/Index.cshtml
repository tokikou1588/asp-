@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@section head{

 
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        function afterRegister(data) {
            var serverData = data.split(':');
            if (serverData[0] == "ok") {
                window.location.href = "/Register/ShowMsg/?msg="+serverData[1]+"&txt=首页"+"&url=/Home/Index";
            } else if (serverData[0] == "no") {
                $("#codeMsg").text(serverData[1]);
            } else {
                $("#codeMsg").text("服务器超时!!");
            }
        }
    </script>
    <style type="text/css">
        .regnow {
    width: 290px;
    margin-left: 15px;
    height: 40px;
    background: url(/images/reg.png) no-repeat;
    border: none;
    cursor:pointer;
}
    </style>
}

 <div style="font-size:small">
  <table width="80%" height="22" border="0" align="center" cellpadding="0" cellspacing="0">
